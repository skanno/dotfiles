" タイトルを表示
set title

" バックスペースを有効化
set bs=indent,eol,start

" 行番号を表示
set number

" カーソルラインを有効化
set cursorline

" ステータスバーは表示
set laststatus=2

" TABキーでスペース4文字
set expandtab
set tabstop=4
set shiftwidth=4

" 空白、改行を可視化
set list
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%

" シンタックスハイライトを有効化
syntax on

" マウスのホイールでスクロール
set mouse=a

" 自動でインデント
set smartindent

" テーマ
colorscheme darkblue
